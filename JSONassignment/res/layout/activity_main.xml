<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#EA00C7">
    <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Please click on any one of the following options----->"
                android:textAppearance="?android:attr/textAppearanceMedium" />
    <Button
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B1F773"
                android:layout_marginTop="20px"
                android:text="Retrieve JSON using a Socket" />
    <Button
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B1F773"
                android:layout_marginTop="20px"
                android:text="Retrieve JSON using AndroidHTTPClient" />
    <Button
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B1F773"
                android:layout_marginTop="20px"
                android:text="Display JSON using Chrome" />
    <Button
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B1F773"
                android:layout_marginTop="20px"
                android:text="Parse JSON and display on GoogleMaps" />

            
    </LinearLayout>
